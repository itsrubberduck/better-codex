{
  "manifest_version": 3,
  "name": "BetterCodex",
  "version": "1.1.0",
  "description": "Quickly filter ChatGPT Codex tasks by repository.",
  "icons": {
    "128": "icon.png"
  },
  "action": {
    "default_title": "BetterCodex"
  },
  "permissions": ["storage"],
  "host_permissions": [
    "*://*.openai.com/codex*",
    "*://chatgpt.com/codex*"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.openai.com/codex*", "*://chatgpt.com/codex*"],
      "js": ["content.js"],
      "css": ["style.css"],
      "run_at": "document_end"
    }
  ]
}
